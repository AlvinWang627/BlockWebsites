{
  "name": "Block Websites",
  "description": "An open-source Chrome extension to block specified websites.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/block_website_icon_32.png"
  },
  "icons": {
    "16": "images/block_website_icon_16.png",
    "48": "images/block_website_icon_48.png",
    "128": "images/block_website_icon_128.png"
  }
}
